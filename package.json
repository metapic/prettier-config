{
  "name": "@metapic/prettier-config",
  "version": "1.0.0-rc.1",
  "description": "Standard Prettier configuration for Metapic projects.",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/metapic/prettier-config",
  "bugs": {
    "url": "https://github.com/metapic/prettier-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metapic/prettier-config.git"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "lint": "tsc --noEmit && eslint --cache",
    "lint:fix": "tsc --noEmit && eslint --cache --fix",
    "semantic-release": "semantic-release"
  },
  "license": "MIT",
  "author": {
    "name": "Daniel Stockhammer",
    "url": "https://github.com/dstockhammer"
  },
  "engines": {
    "node": ">= 20"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "prettier"
  ],
  "peerDependencies": {
    "prettier": ">= 3"
  },
  "devDependencies": {
    "@metapic/eslint-config": "^1.0.3",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/**"
          ]
        }
      ]
    ]
  }
}
